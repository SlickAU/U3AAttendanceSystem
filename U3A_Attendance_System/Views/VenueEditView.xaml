<UserControl x:Class="U3A_Attendance_System.Views.VenueEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org">
    <Grid Height="284" Width="268">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="619*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="Description" HorizontalAlignment="Left" Height="35" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Grid.ColumnSpan="2"/>
        <TextBox Name="Address" HorizontalAlignment="Left" Height="35" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Grid.ColumnSpan="2"/>
        <TextBox Name="CodeId" HorizontalAlignment="Left" Height="35" Margin="10,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Grid.ColumnSpan="2"/>
        <ComboBox Name="Regions" DisplayMemberPath="Description" SelectedValuePath="Id" cal:Message.Attach="UpdateSuburbs(Regions.SelectedValue)" Margin="10,79,60,183" Grid.ColumnSpan="2"/>
        <ComboBox Name="Suburbs" DisplayMemberPath="Name" SelectedValuePath="Id" cal:Message.Attach="UpdateVenues" IsEnabled="{Binding Path=IsSuburbsEnabled}" Margin="10,106,60,150" Grid.ColumnSpan="2"/>
        <ComboBox Name="Venues" DisplayMemberPath="Name" SelectedValuePath="Id" cal:Message.Attach="UpdateLocations(Venues.SelectedValue)" IsEnabled="{Binding Path=IsVenuesEnabled}" Margin="10,139,60,122" Grid.ColumnSpan="2" />
        <Button  Name="Update" Content="Save" HorizontalAlignment="Left" Margin="38,260,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>

    </Grid>
</UserControl>
